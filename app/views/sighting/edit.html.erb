<h1>Edit Sighting</h1>

<form action="/sighting/<%= @sighting.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="sighting_location">Location</label>
  <input id="sighting_location" name="location" type="text" value="<%= @sighting.location %>">
  <label for="sighting_date">Date</label>
  <input id="sighting_date" name="date" type="text" value="<%= @sighting.date %>">
  <label for="sighting_time">Time</label>
  <input id="sighting_time" name="time" type="text" value="<%= @sighting.time %>">
  </br>
  <button>Update Sighting</button>
</form>
